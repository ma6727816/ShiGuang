<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RadioButton
            android:id="@+id/rb_tab_home"
            style="@style/rb_style"
            android:drawableTop="@drawable/tab_home"
            android:text="首页" />

        <RadioButton
            android:id="@+id/rb_tab_payticket"
            style="@style/rb_style"
            android:drawableTop="@drawable/tab_payticket"
            android:text="购票" />

        <RadioButton
            android:id="@+id/rb_tab_shop"
            style="@style/rb_style"
            android:drawableTop="@drawable/tab_shop"
            android:text="商城" />

        <RadioButton
            android:id="@+id/rb_tab_discover"
            style="@style/rb_style"
            android:drawableTop="@drawable/tab_discover"
            android:text="发现" />

        <RadioButton
            android:id="@+id/rb_tab_users"
            style="@style/rb_style"
            android:drawableTop="@drawable/tab_users"
            android:text="我的" />
    </RadioGroup>
</LinearLayout>
